<?xml version="1.0" encoding="utf-8" ?>
    <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        autoReload="true"
        internalLogLevel="Warn"
        internalLogFile="nlog.log">

    <!-- Load the ASP.NET Core plugin -->
    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>

    <!-- the targets to write to -->
    <targets>
        <target
            xsi:type="File"
            name="logfile"
            fileName="/Planets/Logs/${date:format=yyyy-MM-dd}/${date:format=yyyy-MM-dd}.log"
            archiveFileName="/Planets/Logs/${date:format=yyyy-MM-dd}/${date:format=yyyy-MM-dd}_{#}.log"
            archiveNumbering="Rolling"
            archiveAboveSize="10485760"
            layout="${longdate} | ${logger} | ${uppercase:${level}} | ${message} | ${exception} | ${stacktrace}" />
    </targets>

    <!-- rules to map from logger name to target -->
    <rules>
        <logger name="*" minlevel="Warn" writeTo="logfile" />
    </rules>
</nlog>

