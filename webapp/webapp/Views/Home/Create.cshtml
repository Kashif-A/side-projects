@model webapp.Models.Employee

@{ 
    ViewBag.Title = "Create";
}

<h1>Create</h1>

@using (Html.BeginForm())
{
    <div>
        @Html.LabelFor(m => m.name)
        @Html.EditorFor(m => m.name)
        @Html.ValidationMessageFor(m => m.name)
    </div>

    <div>
        <input type="submit" value="Save" />
    </div>
}